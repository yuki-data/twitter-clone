<div class="posts__card card mx-auto">
  <div class="posts__card__header card-header">
    <ul class="posts__card__header__info">
      <li class="posts__card__header__info__username">
        <%= link_to post.user.name, user_path(post.user.id) %>
      </li>
      <li class="posts__card__header__info__date">
        <%= post.updated_at %>
      </li>
    </ul>
  </div>
  <% if post.image.identifier %>
    <% if post.image.content_type.include?("image/") %>
      <div class="picture-embed card-img-top">
        <%= image_tag post.image.url, alt: post.image.identifier %>
      </div>
    <% elsif post.image.content_type.include?("video/") %>
      <div class="video-embed card-img-top">
        <%= video_tag post.image.url, alt: post.image.identifier, width: "100%", height: "100%", controls: true %>
      </div>
    <% end %>
  <% end  %>
  <div class="card-body">
    <div class="card-text">
      <%= simple_format(h(post.content)) %>
    </div>
  </div>
  <div class="card-body">
    <a href="#" class="card-link">Card link</a>
    <a href="#" class="card-link">Another link</a>
  </div>
</div>
