<%= render partial: "posts/navbar" %>
<div class="post-form">
  <h4 class="text-center pt-3">プロフィール編集</h4>
  <%= form_with model: @user_profile, url: user_profiles_path, local: true, class: "post-form__form" do |form| %>
    <div class="post-form__form__menu">
      <%= form.submit "保存" , class: "post-form__form__menu__submit btn btn-primary" %>
      <%= link_to "破棄", edit_user_profiles_path , class: "post-form__form__menu__cancel btn btn-outline-primary" %>
    </div>
    <div class="post-form__form__content">
      <%= form.text_area :profile, rows: 3, class: "form-control post-form__form__content__text", placeholder: "プロフィール" %>
      <div class="post-form__thumbnail-section">
        <%= form.label :thumbnail, class: "post-form__form__content__image" do%>
          <div class="post-form__thumbnail-container">
            <%= icon("fas", "camera", class: "post-form__thumbnail-icon--upload") %>
            <%= icon("far", "window-close", class: "post-form__thumbnail-icon--remove") %>
            <%= image_tag "icons/user-account.jpeg", class: "post-form__thumbnail-image--default" %>
            <%= image_tag @user_profile.thumbnail.to_s, class: "post-form__thumbnail-image--preview" %>
          </div>
          <%= form.file_field :thumbnail, class: "post-form__form__content__image__field" %>
        <% end %>
      </div>

      <%= form.label :bg_image, class: "post-form__form__content__image" do%>
        <%= icon("fas", "image") %>
        <%= form.file_field :bg_image, class: "post-form__form__content__image__field" %>
      <% end %>
    </div>
  <% end %>

  <div class="post-form-preview">
      <div class="post-form__preview-image">
        <%= image_tag @user_profile.thumbnail.to_s %>
      </div>
  </div>
  <div class="post-form-preview">
    <% if @user_profile.bg_image.present? %>
      <div class="post-form__preview-image">
        <%= image_tag @user_profile.bg_image.to_s %>
      </div>
    <% end %>
  </div>
</div>
